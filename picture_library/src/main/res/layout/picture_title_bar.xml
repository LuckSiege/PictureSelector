<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_picture_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?colorPrimary"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/picture_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="?attr/picture.leftBack.icon"/>

        <ImageView
            android:id="@+id/picture_left_back_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/picture_left_back"
            android:src="?attr/picture.leftBack.icon.line"/>

        <TextView
            android:id="@+id/picture_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/picture_left_back_line"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="11"
            android:padding="6dp"
            android:text="@string/picture_camera_roll"
            android:textColor="?picture.title.textColor"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/picture_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/selector_button_primary_8px"
            android:enabled="false"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="完成(1/9)"
            android:textColor="?picture.right.textColor"
            android:textSize="14dp"/>
    </RelativeLayout>

</LinearLayout>

